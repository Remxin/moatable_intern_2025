{
  "compilerOptions": {
    "target": "es2022",    
    "module": "nodenext",
    "lib": ["es2022", "dom"], 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext"
  },
  "types": ["node", "mocha"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}